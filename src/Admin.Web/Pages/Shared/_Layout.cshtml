@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin Panel";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="icon" href="/favicon.ico" />
    <style>
      .container { max-width: 960px; margin: 2rem auto; }
      nav a { margin-right: 1rem; }
      table { width: 100%; border-collapse: collapse; }
      th, td { border-bottom: 1px solid #eee; padding: .5rem; text-align: left; }
      form.inline { display: inline; }
      .muted { color: #777; }
    </style>
    @RenderSection("Head", false)
</head>
<body>
    <div class="container">
        <header>
            <h1>Admin Panel</h1>
            <nav>
                <a asp-page="/Users/Index">Users</a>
                <a asp-page="/Rooms/Index">Rooms</a>
                <a href="/MicrosoftIdentity/Account/SignOut">Sign out</a>
            </nav>
        </header>
        <main>
            @RenderBody()
        </main>
    </div>
    @RenderSection("Scripts", false)
</body>
</html>
