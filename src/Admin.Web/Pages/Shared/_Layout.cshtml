@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin Panel";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="icon" href="/favicon.ico" />
    @RenderSection("Head", false)
</head>
<body>
    <div class="container">
        <header>
            <h1>Admin Panel</h1>
            <nav>
                <a asp-page="/Users/Index">Users</a>
                <a asp-page="/Rooms/Index">Rooms</a>
                <a class="sign-out" href="/MicrosoftIdentity/Account/SignOut">Sign out</a>
            </nav>
        </header>
        <hr />
        <main>
            @RenderBody()
        </main>
    </div>
    @RenderSection("Scripts", false)
</body>
</html>
