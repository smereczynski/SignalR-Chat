@page "{userName}"
@model UsersAssignRoomsModel
@{
    ViewData["Title"] = "Assign Rooms";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<h2>Assign Rooms for @Model.UserName</h2>
<form method="post">
  <input type="hidden" asp-for="UserName" />
  <ul>
  @for (int i = 0; i < Model.AllRooms.Count; i++) {
    var name = Model.AllRooms[i];
    var isChecked = Model.SelectedRooms.Contains(name);
    <li>
      <label>
        <input type="checkbox" name="SelectedRooms" value="@name" @(isChecked ? "checked" : "") /> @name
      </label>
    </li>
  }
  </ul>
  <button type="submit">Save</button>
  <a asp-page="Index">Back</a>
</form>
