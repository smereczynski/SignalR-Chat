@page
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Chat.Web.Resources.SharedResources> Localizer
@model RoomsCreateModel
@{
    ViewData["Title"] = Localizer["CreateNewRoom"];
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">@Localizer["CreateNewRoom"]</h2>
        <form method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">@Localizer["RoomName"]</label>
                <input asp-for="Name" class="form-control" id="Name" />
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
                <a asp-page="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
            </div>
        </form>
    </div>
</div>
