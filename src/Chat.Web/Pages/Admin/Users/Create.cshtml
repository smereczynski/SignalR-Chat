@page
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Chat.Web.Resources.SharedResources> Localizer
@model UsersCreateModel
@{
    ViewData["Title"] = Localizer["CreateUser"];
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">@Localizer["CreateUser"]</h2>
        <form method="post">
            <div class="mb-3">
                <label for="Input_UserName" class="form-label">@Localizer["UserName"]</label>
                <input asp-for="Input.UserName" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="Input_Email" class="form-label">@Localizer["Email"]</label>
                <input asp-for="Input.Email" type="email" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="Input_MobileNumber" class="form-label">@Localizer["GSM"]</label>
                <input asp-for="Input.MobileNumber" type="tel" class="form-control" />
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" asp-for="Input.Enabled" class="form-check-input" id="enabledCheck" checked />
                <label class="form-check-label" for="enabledCheck">@Localizer["EnabledQuestion"]</label>
            </div>
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
                <a asp-page="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
            </div>
        </form>
    </div>
</div>
