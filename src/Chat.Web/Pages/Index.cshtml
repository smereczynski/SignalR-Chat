@page
@model IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Chat.Web.Resources.SharedResources> Localizer

@{
    var isAuth = User?.Identity?.IsAuthenticated == true;
}

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h1 class="mb-3">@Localizer["AppTitle"]</h1>
  <p class="text-muted">@Localizer["AppDescription"]</p>
      @if (isAuth)
      {
          <a class="btn btn-primary" href="/chat">@Localizer["GoToChat"]</a>
      }
      else
      {
          <a class="btn btn-primary" href="/login?ReturnUrl=%2Fchat">@Localizer["SignInToContinue"]</a>
      }
    </div>
  </div>
</div>