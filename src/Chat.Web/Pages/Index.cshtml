@page
@model IndexModel

@{
    var isAuth = User?.Identity?.IsAuthenticated == true;
}

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h1 class="mb-3">SignalR Chat</h1>
  <p class="text-muted">Real-time chat application.</p>
      @if (isAuth)
      {
          <a class="btn btn-primary" href="/chat">Go to Chat</a>
      }
      else
      {
          <a class="btn btn-primary" href="/login?ReturnUrl=%2Fchat">Sign in to continue</a>
      }
    </div>
  </div>
</div>