@page
@model IndexModel

<div class="alert alert-warning alert-dismissible d-none" id="errorAlert" role="alert" data-role="error-alert">
    <span id="errorAlertMessage"></span>
    <button type="button" class="btn-close" aria-label="Close"></button>
</div>

<div class="d-flex flex-column justify-content-center align-items-center vh-100" data-role="loading-wrapper">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<div class="app d-none" data-role="app-root">
    <div class="sidebar">
        <div class="header">
            <h5>Chat Rooms</h5>
            <div class="actions">
                <a role="button" class="ms-3" id="expand-users-list">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-users"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                </a>
                <a role="button" id="expand-sidebar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
                </a>
            </div>
        </div>
        <ul class="rooms list-unstyled" id="rooms-list" data-role="rooms-list">
            <li>
                <a href="#" data-roomId="" data-role="room-link"></a>
            </li>
        </ul>
        <div class="profile">
            <div class="d-flex align-items-center flex-grow-1">
                <span class="avatar me-2 text-uppercase d-none" id="profileAvatarInitial">?</span>
                <img class="avatar me-2 d-none" id="profileAvatarImg" />
                <span id="profileName">Not signed in</span>
            </div>
            <div>
                <button type="button" id="btn-login" class="btn-sign-in" data-bs-toggle="modal" data-bs-target="#otp-login-modal">Sign In</button>
                <button type="button" id="btn-logout" class="btn-sign-out d-none">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                </button>
            </div>
        </div>
    </div>
    <div class="main-content" data-role="no-room-selected">
        <span class="m-auto">Please select room to join!</span>
    </div>
    <div class="main-content d-none" data-role="room-panel">
        <div class="header">
            <h5 id="joinedRoom"></h5>
            <div class="room-actions" data-role="room-actions"></div>
        </div>
        <div class="messages-container position-relative">
            <div class="no-messages-info">There are no messages.</div>
            <ul class="list-unstyled" id="messages-list" data-role="messages-list">
                <li>
                    <div class="message-item">
                        <span class="avatar avatar-lg mx-2 text-uppercase d-none"></span>
                        <img class="avatar avatar-lg mx-2 d-none" />
                        <div class="message-content">
                            <div class="message-info d-flex flex-wrap align-items-center">
                                <span class="author"></span>
                                <span class="timestamp" data-bs-toggle="tooltip" data-bs-placement="top"></span>
                            </div>
                            <div class="content"></div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="message-input-container">
            <input id="message-input" type="text" value="" maxlength="500" placeholder="What's on your mind?" />
            <div class="actions d-flex align-items-center gap-2">
                <span id="queue-badge" class="badge bg-secondary d-none" title="Messages waiting to send">0</span>
                <a role="button" id="btn-send-message">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-send"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
                </a>
            </div>
        </div>
    </div>
    <div class="users-container">
        <div class="header">
            <h5>Who's Here (<span id="users-count">0</span>)</h5>
        </div>
        <ul class="list-unstyled flex-grow-1" id="users-list" data-role="users-list">
            <li>
                <div class="user">
                    <span class="avatar me-2 text-uppercase d-none"></span>
                    <img class="avatar me-2 d-none" />
                    <div class="user-info">
                        <span class="name"></span>
                        <span class="device"></span>
                    </div>
                </div>
            </li>
        </ul>
        <div class="position-relative search-container text-secondary">
            <input type="text" class="" placeholder="Search" />
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </div>
    </div>
</div>

