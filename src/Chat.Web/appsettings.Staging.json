{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.Azure.Cosmos": "Information",
      "StackExchange.Redis": "Information",
      "Azure.Core": "Warning",
      "Azure.Messaging": "Warning",
      "Chat.Web": "Information",
      "Chat.Web.Health": "Information"
    }
  },
  "ApplicationInsights": {
    "SamplingSettings": {
      "IsEnabled": true,
      "MaxTelemetryItemsPerSecond": 5,
      "EvaluationInterval": "00:00:15",
      "EnableAdaptiveSampling": true
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://signalrchat-prod-plc.azurewebsites.net"
    ],
    "AllowAllOrigins": false
  },
  "Azure": {
    "SignalR": {
      "ConnectionString": "${AZURE_SIGNALR_CONNECTION_STRING}"
    }
  },
  "Cosmos": {
    "ConnectionString": "${COSMOS_CONNECTION_STRING}",
    "Database": "chat",
    "MessagesContainer": "messages",
    "UsersContainer": "users",
    "RoomsContainer": "rooms"
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING}"
  },
  "Acs": {
    "ConnectionString": "${ACS_CONNECTION_STRING}",
    "EmailFrom": "${ACS_EMAIL_FROM}",
    "SmsFrom": "${ACS_SMS_FROM}"
  },
  "Notifications": {
    "UnreadDelaySeconds": 60
  },
  "RateLimiting": {
    "MarkRead": {
      "MarkReadPermitLimit": 100,
      "MarkReadWindowSeconds": 10
    }
  },
  "EntraId": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "organizations",
    "ClientId": "",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc",
    "Authorization": {
      "AllowedTenants": [],
      "HomeTenantId": "your-tenant-id-from-logs",
      "AdminRoleValue": "Admin.ReadWrite",
      "RequireTenantValidation": true
    },
    "Fallback": {
      "EnableOtp": true,
      "OtpForUnauthorizedUsers": false
    },
    "AutomaticSso": {
      "Enable": true,
      "AttemptOncePerSession": true,
      "AttemptCookieName": "sso_attempted_v2"
    }
  },
  "Translation": {
    "Enabled": true,
    "ResourceId": "",
    "Endpoint": "",
    "SubscriptionKey": "",
    "Region": "",
    "ApiVersion": "2025-10-01-preview",
    "Provider": "",
    "DeploymentName": "",
    "CacheTtlSeconds": 3600,
    "QueueName": "translation:jobs",
    "MaxConcurrentJobs": 5,
    "JobTimeoutSeconds": 30,
    "MaxRetries": 3,
    "RetryDelaySeconds": 5,
    "DequeueTimeoutSeconds": 5
  }
}
