{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Chat.Web": "Information"
    }
  },
  "AllowedHosts": "*",
  "Azure": {
    "SignalR": {
      "ConnectionString": "${AZURE_SIGNALR_CONNECTION_STRING}"
    }
  },
  "Cosmos": {
    "ConnectionString": "${COSMOS_CONNECTION_STRING}",
    "Database": "chat",
    "MessagesContainer": "messages",
    "UsersContainer": "users",
    "RoomsContainer": "rooms"
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING}"
  },
  "Acs": {
    "ConnectionString": "${ACS_CONNECTION_STRING}",
    "EmailFrom": "${ACS_EMAIL_FROM}",
    "SmsFrom": "${ACS_SMS_FROM}"
  },
  "Notifications": {
    "UnreadDelaySeconds": 60
  },
  "RateLimiting": {
    "MarkRead": {
      "MarkReadPermitLimit": 100,
      "MarkReadWindowSeconds": 10
    }
  }
}
