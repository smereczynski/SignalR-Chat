{
  "__inputs": [
    { "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus", "pluginName": "Prometheus" },
    { "name": "DS_TEMPO", "label": "Tempo", "type": "datasource", "pluginId": "tempo", "pluginName": "Tempo" },
    { "name": "DS_LOKI", "label": "Loki", "type": "datasource", "pluginId": "loki", "pluginName": "Loki" }
  ],
  "__requires": [],
  "title": "Chat Dev Overview",
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 0,
  "version": 1,
  "refresh": "5s",
  "tags": ["dev", "chat"],
  "panels": [
    {
      "type": "row",
      "title": "Backend health",
      "gridPos": {"x": 0, "y": 0, "w": 24, "h": 1}
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests/sec",
      "gridPos": {"x": 0, "y": 1, "w": 12, "h": 8},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "sum by (http_request_method, http_response_status_code) ((rate(http_server_request_duration_seconds_count[$__rate_interval]) or rate(http_server_request_duration_count[$__rate_interval])))",
          "legendFormat": "{{http_request_method}} {{http_response_status_code}}",
          "interval": ""
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "SignalR Connections",
      "gridPos": {"x": 12, "y": 1, "w": 12, "h": 8},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "sum(chat_connections_active)",
          "legendFormat": "active",
          "interval": ""
        }
      ]
    },
    {
      "type": "row",
      "title": "App metrics",
      "gridPos": {"x": 0, "y": 9, "w": 24, "h": 1}
    },
    {
      "type": "timeseries",
      "title": "Chat messages sent",
      "gridPos": {"x": 0, "y": 10, "w": 12, "h": 8},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "(rate(chat_messages_sent_total[$__rate_interval]) or rate(chat_messages_sent[$__rate_interval]))",
          "legendFormat": "messages/sec",
          "interval": ""
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "OTP verifications",
      "gridPos": {"x": 12, "y": 10, "w": 12, "h": 8},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
          "expr": "(rate(chat_otp_verifications_total[$__rate_interval]) or rate(chat_otp_verifications[$__rate_interval]))",
          "legendFormat": "verifications/sec",
          "interval": ""
        }
      ]
    },
    {
      "type": "row",
      "title": "Traces",
      "gridPos": {"x": 0, "y": 18, "w": 24, "h": 1}
    },
    {
      "type": "table",
      "title": "Last Traces (15m)",
      "gridPos": {"x": 0, "y": 19, "w": 24, "h": 12},
      "timeFrom": "15m",
      "datasource": {"type": "tempo", "uid": "${DS_TEMPO}"},
      "targets": [
        {
          "datasource": {"type": "tempo", "uid": "${DS_TEMPO}"},
          "queryType": "traceqlSearch",
          "refId": "A",
          "limit": 20,
          "tableType": "traces",
          "metricsQueryType": "range",
          "filters": [
            {"id": "serviceName", "operator": "=", "value": "Chat.Web"}
          ]
        }
      ],
      "options": {
        "showHeader": true,
        "footer": {"show": false},
        "sortBy": [{"displayName": "Start time", "desc": true}]
      }
    },
    {
      "type": "row",
      "title": "Logs",
      "gridPos": {"x": 0, "y": 29, "w": 24, "h": 1}
    },
    {
      "type": "logs", 
      "title": "App Logs (Loki)",
      "gridPos": {"x": 0, "y": 30, "w": 24, "h": 10},
      "datasource": {"type": "loki", "uid": "${DS_LOKI}"},
      "targets": [
        {
          "refId": "A",
          "expr": "{service=\"Chat.Web\"}",
          "queryType": "range"
        },
        {
          "refId": "B",
          "expr": "{service_name=\"Chat.Web\"}",
          "queryType": "range"
        }
      ]
    }
  ]
}
